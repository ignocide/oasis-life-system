{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "./@types/*",
        "*"
      ]
    },
  },
  "exclude": ["node_modules", "dist"]
}